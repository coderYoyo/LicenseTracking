<Window x:Class="LicenseTracking.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="320" Width="467" ResizeMode="NoResize" Background="#FFEAE7E7" >
    <Grid KeyDown="Window_KeyDown">
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="161,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Arial" FontSize="15" TabIndex="1"/>
        <Label x:Name="lblUserName" Content="UserName" HorizontalAlignment="Left" Margin="36,97,0,0" VerticalAlignment="Top" Width="88" FontFamily="Arial" FontSize="15"/>
        <Label x:Name="lblPwd" Content="Password" HorizontalAlignment="Left" Margin="36,158,0,0" VerticalAlignment="Top" Width="88" FontFamily="Arial" FontSize="15"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="164,233,0,0" VerticalAlignment="Top" Width="75" FontFamily="Arial" FontSize="16" Click="btnLogin_Click" TabIndex="3"/>
        <PasswordBox x:Name="txtPwd" HorizontalAlignment="Left" Margin="161,160,0,0" FontFamily="Arial"  VerticalAlignment="Top" Width="120" TabIndex="2" FontSize="15"/>
        <Label Content="License Tracking Application" HorizontalAlignment="Left" Margin="85,22,0,0" VerticalAlignment="Top" Width="263" FontFamily="Arial" FontSize="20" />

    </Grid>
</Window>
